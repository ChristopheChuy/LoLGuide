<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LolGuide.InfoChampion"
            Title="Info Champion">
  <ContentPage Title="Info">
    <ScrollView>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="auto"/>
          <ColumnDefinition/>
          <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Image WidthRequest="100" HeightRequest="100" Source="{Binding Image,Converter={StaticResource imageChampionConverter}}"/>
        <Entry Grid.Column="1" Text="{Binding Nom ,Mode=TwoWay}"/>
        <Switch Grid.Column="2" />
        
      </Grid>
    </ScrollView>
    </ContentPage>
  <ContentPage Title="Histoire">
    <ScrollView>
     <Label Text="{Binding Histoire}" HorizontalTextAlignment="Center" VerticalOptions="Center" HorizontalOptions="Center"/>
    </ScrollView>
  </ContentPage >
    <ContentPage Title="Sorts">
        <ScrollView>
          <ListView ItemsSource="{Binding Sorts}">
          <ListView.ItemTemplate>
            <DataTemplate>
              <ImageCell Text="{Binding Nom}" Detail="{Binding Description}" ImageSource="{Binding Image,Converter={StaticResource imageSortConverter}}"/>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
       </ScrollView>
    </ContentPage>
</TabbedPage>
