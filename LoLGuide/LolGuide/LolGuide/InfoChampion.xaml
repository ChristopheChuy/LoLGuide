<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LolGuide.InfoChampion"
            Title="Info Champion">
  <ScrollView>
    <StackLayout>
      <Label Text="{Binding Nom}"/>
      <Label Text="{Binding Histoire}"/>
      <ListView ItemsSource="{Binding Sorts}">
     
      <ListView.ItemTemplate >
        <DataTemplate>
          <ViewCell>
            <StackLayout>
                <Image Source="{Binding Image,Converter={StaticResource imageSortConverter}}"/>
                <Label Text="{Binding Nom}"/>
                <Label Text="{Binding Description}"/> 
              </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    </StackLayout>
   </ScrollView>
</ContentPage>