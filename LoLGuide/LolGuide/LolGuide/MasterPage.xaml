<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LolGuide.MasterPage"
             Title="LolGuide">
  <StackLayout VerticalOptions="FillAndExpand">
    <ListView x:Name="listView" VerticalOptions="FillAndExpand" SeparatorVisibility="None">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal">
              <Label Text="{Binding Title}"/>
             <!--   <Image Source="list.jpg"/>
              <Image Aspect="AspectFill"
               WidthRequest="100"
               HeightRequest="100"
               HorizontalOptions="Center" Source="{Binding IconSource}"/>-->
              
            <Label Text="{Binding IconSource}"/>
           <!--<Image Source="{Binding IconSource}"/>--> 
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  <Image Source="list.jpg"/>
  </StackLayout>
</ContentPage>