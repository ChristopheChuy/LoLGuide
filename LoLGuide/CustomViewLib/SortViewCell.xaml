<?xml version="1.0" encoding="UTF-8"?>
<ViewCell x:Name="root" xmlns:local="clr-namespace:CustomViewLib" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CustomViewLib.SortViewCell">

  <StackLayout BindingContext="{x:Reference root}" >
    <Label FontSize="18" Text="{Binding Nom}"/>
    <StackLayout Orientation="Horizontal">
      
    <StackLayout.Resources>
        <ResourceDictionary>
          <local:ImageSortConverter x:Key="imageSortConverter"/>
        </ResourceDictionary>
      </StackLayout.Resources>
    <Image WidthRequest="90"
             HeightRequest="90"
             Aspect="AspectFit"
             Source="{Binding Image,Converter={StaticResource imageSortConverter}}"/>
      <Label Text="{Binding Description}"/>
  </StackLayout>
  </StackLayout>
</ViewCell>
